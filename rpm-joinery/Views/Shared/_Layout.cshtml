                <div class="col-md-4">
                    <h5><b>Useful Links</b></h5>
                    <h6><a href="@Url.Action("About","Home")">About</a> <a href="@Url.Action("Contact","Home")">Contact</a></h6>
                    <h6><a href="@Url.Action("Services","Home")">Services</a> <a href="@Url.Action("Index","Projects")">Previous Work</a></h6>
                    <h6><a href="@Url.Action("Kitchens","Projects")">Kitchens</a> <a href="@Url.Action("Bathroom","Projects")">Bathrooms</a></h6>
